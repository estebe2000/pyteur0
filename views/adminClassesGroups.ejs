<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Gestion Classes & Groupes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4">Gestion des Classes & Groupes</h1>
    <a href="/admin" class="btn btn-secondary mb-4">Retour au dashboard</a>

    <div class="row">
      <div class="col-md-6">
        <h2>Classes</h2>
<form action="/admin/classes/add" method="POST" class="mb-3 d-flex gap-2">
  <input type="text" name="nom" placeholder="Nom classe" class="form-control" required>
  <select name="niveau" class="form-select">
    <option value="">-- Niveau --</option>
    <% niveaux.forEach(n => { %>
      <option value="<%= n %>"><%= n %></option>
    <% }) %>
  </select>
  <button type="submit" class="btn btn-success">Ajouter</button>
</form>
        <ul class="list-group">
          <% classes.forEach(c => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= c.nom %> (<%= c.niveau || '' %>)</span>
              <form action="/admin/classes/delete/<%= c.id %>" method="POST">
                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
              </form>
            </li>
          <% }) %>
        </ul>
      </div>

      <div class="col-md-6">
        <h2>Groupes</h2>
<form action="/admin/groups/add" method="POST" class="mb-3 d-flex gap-2">
  <input type="text" name="nom" placeholder="Nom groupe" class="form-control" required>
  <select name="classeId" class="form-select">
    <option value="">-- Classe --</option>
    <% classes.forEach(c => { %>
      <option value="<%= c.id %>"><%= c.nom %> (<%= c.niveau %>)</option>
    <% }) %>
  </select>
  <button type="submit" class="btn btn-success">Ajouter</button>
</form>
        <ul class="list-group">
          <% groupes.forEach(g => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= g.nom %></span>
              <form action="/admin/groups/delete/<%= g.id %>" method="POST">
                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
              </form>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
